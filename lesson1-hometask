<script>

    let temperCelcium = 39;
    let temperFarenheit = (9 / 5) * temperCelcium + 32;
    alert(temperFarenheit);
    
    let admin, name = "Василий";
    admin = name;
    alert(admin);

    // дополнительно

    let number = 1000, string = "108";
    let sum = number + string;
    alert(sum);
    
    /* атрибуты async и defer работают только с внешними скриптами
    позволяют внешним скриптам загружаться синхронно с потоком.
    async - скрипт будет грузиться параллельно с потоком и сработает по мере загрузки.
    defer - скрипт будет грузиться параллельно с потоком и сработает по мере загрузки + будет соблюдаться последовательность загрузки скриптов в потоке у которых есть этот атрибут*/


    </script>
